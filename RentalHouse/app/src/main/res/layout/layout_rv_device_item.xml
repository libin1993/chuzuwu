<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/esm_device"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    app:contentView="@+id/ll_device_info"
    app:rightMenuView="@+id/ll_device_edit">

    <LinearLayout
        android:id="@+id/ll_device_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bound_ee">
            <ImageView
                android:id="@+id/iv_device"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/tv_device_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_22"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_device_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_77"
                android:textSize="13sp"
                android:layout_marginTop="11dp"/>
            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_77"
                android:textSize="13sp"
                android:layout_marginTop="11dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_device_edit"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_exchange_device"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/orange_fda"
            android:gravity="center"
            android:text="更换"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/tv_delete_device"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/red_e93"
            android:gravity="center"
            android:text="拆除"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
    </LinearLayout>


</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>