<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="12dp"
            android:textColor="@color/red_e93"/>

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="房东姓名"
            android:textColor="@color/gray_55"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_landlord_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入姓名"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/gray_22"
            android:textColorHint="@color/gray_88"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/gray_ee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="12dp"
            android:textColor="@color/red_e93"/>

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textColor="@color/gray_55"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_id_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="@string/id_card"
            android:gravity="center_vertical"
            android:hint="请输入身份证号"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="@color/gray_22"
            android:textColorHint="@color/gray_88"
            android:textSize="14sp"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/gray_ee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="12dp"
            android:textColor="@color/red_e93"/>

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:textColor="@color/gray_55"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="@string/phone_number"
            android:gravity="center_vertical"
            android:hint="请输入联系方式"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/gray_22"
            android:textColorHint="@color/gray_88"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/gray_ee"/>

    <LinearLayout
        android:id="@+id/ll_business_type"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="12dp"
            android:textColor="@color/red_e93"/>

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="所属业务类型"
            android:textColor="@color/gray_55"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_business_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="请选择所属业务类型"
            android:textColor="@color/gray_22"
            android:textColorHint="@color/gray_88"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_next"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/gray_ee"/>

    <LinearLayout
        android:id="@+id/ll_house_no"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="房屋二维码"
            android:textColor="@color/gray_55"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_house_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:drawableRight="@mipmap/ic_scan_code"
            android:hint="请扫描房屋二维码"
            android:textColor="@color/gray_22"
            android:textColorHint="@color/gray_88"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/gray_ee"/>

    <LinearLayout
        android:id="@+id/ll_house_location"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="12dp"
            android:textColor="@color/red_e93"/>

        <TextView
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="房屋经纬度"
            android:textColor="@color/gray_55"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_house_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:hint="请输入房屋经纬度"
            android:textColor="@color/gray_22"
            android:textColorHint="@color/gray_88"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_f8"/>

</LinearLayout>